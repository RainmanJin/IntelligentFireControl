  <!--查询维保公司SQL公共部分-->
  <sql id="selectSql">

      select mc.id as id,mc.organization_id as organization_id,
              ri.name as organization_name,
              mc.name as name,mc.telephone as telephone,
              mc.remark,mc.create_time,mc.logic_remove
      from maintenance_company as mc
      left join region_info as ri on ri.id = mc.organization_id
  </sql>
  <!--分頁查詢-->
  <select id="queryListByParam" parameterType="cn.com.bgy.ifc.entity.po.repair.MaintenanceCompany" resultMap="BaseResultMap">
