<insert id="insert" parameterType="cn.com.bgy.ifc.entity.po.system.basic.SystemRole">
    insert into system_role (type,name, organization_id,
      logic_remove,state)
    values (#{type,jdbcType=VARCHAR},#{name,jdbcType=VARCHAR}, #{organizationId,jdbcType=BIGINT},
      #{logicRemove,jdbcType=BIT},#{state,jdbcType=INTEGER})
  </insert>
    <insert id="insertSelective" parameterType="cn.com.bgy.ifc.entity.po.system.basic.SystemRole">
        insert into system_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="type != null">
                type,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="organizationId != null">
                organization_id,
            </if>
            <if test="logicRemove != null">
                logic_remove,
            </if>
            <if test="state != null">
                state,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=BIGINT},
            </if>
            <if test="type != null">
                #{type,jdbcType=VARCHAR},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="organizationId != null">
                #{organizationId,jdbcType=BIGINT},
            </if>
            <if test="logicRemove != null">
                #{logicRemove,jdbcType=BIT},
            </if>
            <if test="state != null">
                #{state,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>
    <!--分页条件查询系统角色-->
    <select id="queryAllList" resultType="cn.com.bgy.ifc.entity.vo.system.basic.SystemRoleVo" parameterType="cn.com.bgy.ifc.entity.vo.system.basic.SystemRoleVo">
        SELECT
        t1.id,
        t1.type,
        t1.name,
        t1.organization_id,
        t1.logic_remove,
        t1.state
        FROM
        system_role t1
        LEFT JOIN system_organization t2 ON t1.organization_id = t2.id
        LEFT JOIN account t3 ON t2.user_id = t3.id
        WHERE
            t1.logic_remove=false
        <if test="userId != null">
            AND t2.user_id = #{userId}
        </if>
        <if test="type != null ">
            AND t1.type=#{type}
        </if>
        <if test="keyWords != null">
            AND t1.name like concat('%',#{keyWords},'%')
        </if>
  </select>

