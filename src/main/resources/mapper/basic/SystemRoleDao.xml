<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.bgy.ifc.dao.basic.SystemRoleDao">
    <resultMap id="BaseResultMap" type="cn.com.bgy.ifc.entity.po.basic.SystemRole">
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="type" jdbcType="VARCHAR" property="type"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="state" jdbcType="INTEGER" property="state"/>
        <result column="organization_id" jdbcType="BIGINT" property="organizationId"/>
        <result column="logic_remove" jdbcType="BIT" property="logicRemove"/>

    </resultMap>
    <insert id="insert" parameterType="cn.com.bgy.ifc.entity.po.basic.SystemRole">
    insert into system_role (type,name, organization_id,
      logic_remove,state)
    values (#{type,jdbcType=VARCHAR},#{name,jdbcType=VARCHAR}, #{organizationId,jdbcType=BIGINT},
      #{logicRemove,jdbcType=BIT},#{state,jdbcType=INTEGER})
  </insert>
    <insert id="insertSelective" parameterType="cn.com.bgy.ifc.entity.po.basic.SystemRole">
        insert into system_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="type != null">
                type,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="organizationId != null">
                organization_id,
            </if>
            <if test="logicRemove != null">
                logic_remove,
            </if>
            <if test="state != null">
                state,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=BIGINT},
            </if>
            <if test="type != null">
                #{type,jdbcType=VARCHAR},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="organizationId != null">
                #{organizationId,jdbcType=BIGINT},
            </if>
            <if test="logicRemove != null">
                #{logicRemove,jdbcType=BIT},
            </if>
            <if test="state != null">
                #{state,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>

    <select id="queryAllList" resultType="cn.com.bgy.ifc.entity.po.basic.SystemRole" parameterType="cn.com.bgy.ifc.entity.vo.basic.SystemRoleVo">
		SELECT
		id,
		type,
		name,
		organization_id organizationId,
		state
		FROM system_role where logic_remove=true
        <if test="type != null ">
            AND type=#{type}
        </if>
        <if test="keyword != null">
            and name like concat('%',#{keyword},'%')
        </if>
  </select>

    <select id="queryListByParam" parameterType="cn.com.bgy.ifc.entity.po.basic.SystemRole" resultMap="BaseResultMap">
        SELECT
        id,
        type,
        name,
        organization_id,
        logic_remove,
        state
        FROM system_role
        WHERE 1=1 AND logic_remove=true
        <if test="type != null ">
            AND name=#{type}
        </if>
        <if test="name != null ">
            AND name=#{name}
        </if>
        <if test="organizationId != null ">
            AND organization_id=#{organizationId}
        </if>
        <if test="state != null ">
            AND state=#{state}
        </if>
    </select>

    <select id="findById" parameterType="Long" resultMap="BaseResultMap">
		SELECT
		id,
		type,
		name,
		organization_id,
		logic_remove,
		state
		FROM system_role WHERE id = #{id}
  </select>
    <update id="updateRole" parameterType="cn.com.bgy.ifc.entity.po.basic.SystemRole">
        UPDATE system_role
        <set>
            <if test="type != null">type =#{type},</if>
            <if test="name != null">name =#{name},</if>
            <if test="organizationId != null">organization_id =#{organizationId},</if>
            <if test="logicRemove != null">logic_remove =#{logicRemove},</if>
            <if test="state != null">state =#{state}</if>
        </set>
        WHERE id
        = #{id}
    </update>
    <update id="deleteRole" parameterType="java.util.List">
        UPDATE system_role set logic_remove =false where id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
    <delete id="deleteById" parameterType="Long">
       DELETE FROM system_role WHERE id = #{id}
  </delete>
    <select id="queryListByUserId" parameterType="Long" resultMap="BaseResultMap">
		SELECT
		id,
		type,
		name,
		organization_id,
		logic_remove,
		state
		FROM system_role WHERE id in (
            select ur.role_id from system_user_role ur where ur.user_id =#{userId}
         ) and logic_remove=0
  </select>

</mapper>