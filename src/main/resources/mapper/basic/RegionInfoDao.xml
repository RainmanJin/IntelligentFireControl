<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.bgy.ifc.dao.basic.RegionInfoDao">
  <resultMap id="BaseResultMap" type="cn.com.bgy.ifc.entity.po.basic.RegionInfo">
    <result column="id" jdbcType="BIGINT" property="id" />
    <result column="organization_id" jdbcType="BIGINT" property="organizationId" />
    <result column="code" jdbcType="VARCHAR" property="code" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="logic_remove" jdbcType="BIT" property="logicRemove" />
  </resultMap>
  <sql id="Base_Column_List">
    id, organization_id, code, name, create_time, logic_remove
  </sql>
  <!--获取区域信息列表-->
  <select id="searchByWhere" parameterType="cn.com.bgy.ifc.entity.po.basic.RegionInfo" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from region_info
    <where>
      <if test="id != null">
      AND id= #{id,jdbcType=BIGINT}
      </if>
      <if test="organizationId != null">
      AND organization_id= #{organizationId,jdbcType=BIGINT}
      </if>
      <if test="code != null">
      AND code=#{code,jdbcType=VARCHAR}
      </if>
      <if test="name != null">
      AND #{name,jdbcType=VARCHAR}
      </if>
      <if test="createTime != null">
      AND create_time= #{createTime,jdbcType=TIMESTAMP}
      </if>
      <if test="logicRemove != null">
      AND  logic_remove=#{logicRemove,jdbcType=BIT}
      </if>
    </where>
  </select>
</mapper>