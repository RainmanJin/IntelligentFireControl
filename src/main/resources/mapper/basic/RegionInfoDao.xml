    <select id="queryListRegionInfo" parameterType="cn.com.bgy.ifc.entity.vo.project.RegionInfoVo"
            resultMap="BaseResultMap">
        select id, organization_id, code, name, create_time
        from region_info
        <where>
            <if test="keyword != null and keyword !='' ">
                AND (code LIKE concat('%',#{keyword},'%') OR name LIKE concat('%',#{keyword},'%'))
            </if>
            <if test="organizationId !=null and organizationId !='' ">
              and  organization_id =#{organizationId}
            </if>
            AND logic_remove = 0
        </where>
    </select>

    <select id="findByOrgId" parameterType="Long" resultMap="BaseResultMap">
		SELECT
