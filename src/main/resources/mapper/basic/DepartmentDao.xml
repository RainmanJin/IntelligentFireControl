    <insert id="insert" parameterType="cn.com.bgy.ifc.entity.po.basic.Department">
    insert into department (parent_id, name,
      state, organization_id, create_time, 
      logic_remove)
    values (#{parentId,jdbcType=BIGINT}, #{name,jdbcType=VARCHAR},
      #{state,jdbcType=INTEGER}, #{organizationId,jdbcType=BIGINT}, #{createTime,jdbcType=TIMESTAMP}, 
      #{logicRemove,jdbcType=BIT})
  </insert>
    <insert id="insertSelective" parameterType="cn.com.bgy.ifc.entity.po.basic.Department">
        insert into department
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="parentId != null">
                parent_id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="state != null">
                state,
            </if>
            <if test="organizationId != null">
                organization_id,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="logicRemove != null">
                logic_remove,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
