    <select id="queryAllList" resultMap="BaseResultMap">
		SELECT
		id,
		parent_id,
		name,
		state,
		organization_id,
		create_time,
		logic_remove
		FROM department WHERE logic_remove = 0
    </select>

    <select id="queryListByParam" parameterType="cn.com.bgy.ifc.entity.vo.basic.DepartmentVo" resultMap="BaseResultMap">
        SELECT
        a.id,
        a.parent_id,
        a.name,
        b.name AS parent_name,
        a.state,
        a.organization_id,
        a.create_time,
        a.logic_remove
        FROM department a LEFT JOIN department b ON a.parent_id=b.id
        <where>
            <if test="parentId != null ">
                AND a.parent_id=#{parentId}
            </if>
            <if test="name != null ">
                AND a.name=#{name}
            </if>
            <if test="state != null ">
                AND a.state=#{state}
            </if>
            <if test="organizationId != null ">
                AND a.organization_id=#{organizationId}
            </if>
            <if test="keyword!='' and keyword!=null">
                AND (a.name LIKE concat('%',#{keyword},'%') OR b.name LIKE concat('%',#{keyword},'%'))
            </if>
            AND a.logic_remove = 0
        </where>
    </select>

    <select id="findById" parameterType="Long" resultMap="BaseResultMap">
		SELECT
		id,
		parent_id,
		name,
		state,
		organization_id,
		create_time,
		logic_remove
		FROM department WHERE id = #{id}
  </select>

    <update id="update" parameterType="cn.com.bgy.ifc.entity.po.basic.Department">
        UPDATE department
        <set>
            <if test="parentId != null">parent_id =#{parentId},</if>
            <if test="name != null">name =#{name},</if>
            <if test="state != null">state =#{state},</if>
            <if test="organizationId != null">organization_id =#{organizationId},</if>
            <if test="createTime != null">create_time =#{createTime},</if>
            <if test="logicRemove != null">logic_remove =#{logicRemove}</if>
        </set>
        WHERE id
        = #{id}
    </update>

    <delete id="deleteById" parameterType="Long">
       DELETE FROM department WHERE id = #{id}
  </delete>

