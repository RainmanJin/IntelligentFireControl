<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.bgy.ifc.dao.system.basic.SystemPowerDao">
    <resultMap id="BaseResultMap" type="cn.com.bgy.ifc.entity.po.system.basic.SystemPower">
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="display_name" jdbcType="VARCHAR" property="displayName"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="logic_remove" jdbcType="BIT" property="logicRemove"/>
    </resultMap>
    <insert id="insert" parameterType="cn.com.bgy.ifc.entity.po.system.basic.SystemPower">
    insert into system_power (name, display_name,
      remark, logic_remove)
    values (#{name,jdbcType=VARCHAR}, #{displayName,jdbcType=VARCHAR},
      #{remark,jdbcType=VARCHAR}, #{logicRemove,jdbcType=BIT})
  </insert>
    <insert id="insertSelective" parameterType="cn.com.bgy.ifc.entity.po.system.basic.SystemPower">
        insert into system_power
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="displayName != null">
                display_name,
            </if>
            <if test="remark != null">
                remark,
            </if>
            <if test="logicRemove != null">
                logic_remove,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=BIGINT},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="displayName != null">
                #{displayName,jdbcType=VARCHAR},
            </if>
            <if test="remark != null">
                #{remark,jdbcType=VARCHAR},
            </if>
            <if test="logicRemove != null">
                #{logicRemove,jdbcType=BIT},
            </if>
        </trim>
    </insert>

    <select id="queryAllList" resultMap="BaseResultMap">
		SELECT
		id,
		name,
		display_name,
		remark,
		logic_remove
		FROM system_power
  </select>

    <select id="queryListByParam" parameterType="cn.com.bgy.ifc.entity.po.system.basic.SystemPower" resultMap="BaseResultMap">
		SELECT
		id,
		name,
		display_name,
		remark,
		logic_remove
		FROM system_power
        WHERE 1=1
        <if test="name != null ">
            AND name=#{name}
        </if>
        <if test="displayName != null ">
            AND display_name=#{displayName}
        </if>
        <if test="logicRemove != null ">
            AND logic_remove=#{logicRemove}
        </if>
  </select>

    <select id="findById" parameterType="Long" resultMap="BaseResultMap">
		SELECT
		id,
		name,
		display_name,
		remark,
		logic_remove
		FROM system_power WHERE id = #{id}
  </select>

    <update id="update" parameterType="cn.com.bgy.ifc.entity.po.system.basic.SystemPower">
        UPDATE system_power
        <set>
            <if test="name != null">name =#{name},</if>
            <if test="displayName != null">display_name =#{displayName},</if>
            <if test="remark != null">remark =#{remark},</if>
            <if test="logicRemove != null">logic_remove =#{logicRemove}</if>
        </set>
        WHERE id
        = #{id}
    </update>

    <delete id="deleteById" parameterType="Long">
       DELETE FROM system_power WHERE id = #{id}
  </delete>


    <select id="queryListByUserId" parameterType="cn.com.bgy.ifc.entity.po.system.basic.SystemPower" resultMap="BaseResultMap">
   SELECT
            id,
            name,
            display_name,
            remark,
            logic_remove
            FROM system_power where id in (
           SELECT rp.power_id from system_role_power rp where rp.role_id in (
               select ur.role_id from system_user_role ur where ur.user_id =#{userId}
               )and logic_remove=0
            )and logic_remove=0
    </select>
</mapper>