<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.bgy.ifc.entity.po.basic.BrandMapper">
  <resultMap id="BaseResultMap" type="cn.com.bgy.ifc.entity.po.equipment.quipment.Brand">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="status" jdbcType="BIGINT" property="status" />
    <result column="description" jdbcType="VARCHAR" property="description" />
  </resultMap>

  <sql id="Base_Column_List">
    id, name, status, description
  </sql>
  <!--品牌获取分页-->
  <select id="searchByWhere" parameterType="cn.com.bgy.ifc.entity.po.equipment.quipment.Brand" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from brand
    <where>
        <if test="record.id != null">
            and  id = #{record.id,jdbcType=BIGINT},
        </if>
        <if test="record.name != null">
            and  name = #{record.name,jdbcType=VARCHAR},
        </if>
        <if test="record.status != null">
            and  status = #{record.status,jdbcType=BIGINT},
        </if>
        <if test="record.description != null">
            and  description = #{record.description,jdbcType=VARCHAR},
        </if>
    </where>

  </select>
</mapper>